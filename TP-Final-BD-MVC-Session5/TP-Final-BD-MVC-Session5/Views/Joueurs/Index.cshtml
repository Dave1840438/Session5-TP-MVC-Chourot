@model  TP_Final_BD_MVC_Session5.Models.Joueurs

@{
    ViewBag.Title = "Contact";
}
<body style="background-color: #fff">

    <div style="margin-top: 70px">

        <div class="col-lg-12" style="margin-bottom: 20px">
                @Html.ActionLink("Ajouter un joueur", "Insert", "Joueurs", new { @class = "btn btn-md btn-default" })
        </div>


        @if (ViewBag.HasRow)
        {

            <div class="container">
                <div class="row col-md-12 custyle">
                    <h4 class="text-center">
                       Table de tout les joueurs
                    </h4>
                    <table class="table table-striped custab">
                        <thead>

                            <tr>
                                <th>Image</th>
                                <th>Nom</th>
                                <th>Date Naissance</th>
                                <th>Supprimer</th>
                                <th>Modifier</th>
                            </tr>
                        </thead>

                        @do
                        {


                                <tr>
                                    <td>
                                        <div style="background-image:url(/Images/@Model.Photo.ToString()); background-size: cover; height: 150px"></div>
                                    </td>
                                    <td>@Model.NomComplet.ToString()</td>
                                    <td>@Model.DateNaissance.ToLongDateString()</td>
                                    <td>@Html.ActionLink("Supprimer", "Index", "Joueurs", new { idToDelete = @Model.Id }, new { @class = "btn btn-md btn-danger" })</td>
                                    <td>@Html.ActionLink("Modifier", "UpdateJoueur", "Joueurs", new { idToUpdate = @Model.Id }, new { @class = "btn btn-md btn-warning" })</td>
                                </tr>

                        }while (Model.Next());
                    </table>
                </div>
            </div>
        }
    </div>
</body>
