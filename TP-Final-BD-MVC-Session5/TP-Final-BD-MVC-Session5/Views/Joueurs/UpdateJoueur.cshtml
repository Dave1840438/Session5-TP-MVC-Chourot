@model TP_Final_BD_MVC_Session5.Models.Joueurs

@{
    ViewBag.Title = "UpdateESport";
}

<h2>UpdateESport</h2>


@using (Html.BeginForm("UpdateJoueur", "Joueurs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="span3 well col-lg-6 col-lg-offset-3" style="margin-top: 30px">
        <div class="form-horizontal">
            <h4>ESportViewModel</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Photo)

            <div class="form-group">
                @Html.LabelFor(model => model.NomComplet, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NomComplet)
                    @Html.ValidationMessageFor(model => model.NomComplet)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DateNaissance, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DateNaissance)
                    @Html.ValidationMessageFor(model => model.DateNaissance)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Photo, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input name="NouveauLogo" type="file" accept="image/png" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
        </div>
        }

       

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
