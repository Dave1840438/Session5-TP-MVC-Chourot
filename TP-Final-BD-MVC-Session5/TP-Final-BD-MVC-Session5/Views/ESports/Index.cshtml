@model  TP_Final_BD_MVC_Session5.Models.Esports

@{
    ViewBag.Title = "Contact";
   
}
<body style="background-color: #fff">

    <div style="margin-top: 70px">

        @*<div class="col-lg-12" style="margin-bottom: 20px">
            @Html.ActionLink("Ajouter Esport", "Insert", "ESports", new { @class = "btn btn-lg btn-default" })
        </div>*@
       

            @if (ViewBag.HasRow)
            {
                do
                {
                    
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="text-center">
                                    @Model.Nom.ToString()
                                </h4>
                            </div>
                            <div class="panel-body text-center" style="padding: 0px">
                                <img src="~/Images/@Model.Logo.ToString()" style="max-width: 350px; min-height: 100px" class="img-responsive" />
                            </div>
                            <ul class="list-group list-group-flush text-center">
                                <li class="list-group-item"><i class="icon-ok text-danger"></i>@Model.DateCreation.ToLongDateString()</li>
                            </ul>
                            <ul class="list-group list-group-flush text-center">
                                <li class="list-group-item"><i class="icon-ok text-danger"></i>@Html.ActionLink("Supprimer", "Index", "ESports", new { idToDelete = @Model.Id }, new { @class = "btn btn-md btn-danger" })</li>
                            </ul>
                            <ul class="list-group list-group-flush text-center">
                                <li class="list-group-item"><i class="icon-ok text-danger"></i>@Html.ActionLink("Modifier", "UpdateESport", "ESports", new { idToUpdate = @Model.Id }, new { @class = "btn btn-md btn-warning" })</li>
                            </ul>
                            <div class="panel-footer">

                                @Html.ActionLink("View Teams", "Index", "Teams", new { idSports = @Model.Id }, new { @class = "btn btn-lg btn-block btn-default" })

                            </div>
                        </div>
                    </div>
                } while (Model.Next());
            }
    </div>

</body>
